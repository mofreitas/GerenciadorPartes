<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84sp"
    android:orientation="horizontal"
    android:paddingRight="16sp"
    android:paddingLeft="16sp"
    android:paddingBottom="5sp"
    android:paddingTop="5sp"
    android:weightSum="14"
    android:id="@+id/linha_pendente"
    android:baselineAligned="false">

    <!--ffad99
    d6e3b5-->


    <LinearLayout
        android:id="@+id/colunap1"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="vertical"
        android:weightSum="4">

        <!-- height dos filhos tem que ser 0 para o layout weight funcionar,
            dessa forma, a altura será definida pelo peso de cada linha, que no caso abixo, são iguais

            se o layout_height= matchparent, o tamanho do filho seguira o peso
            se for 0sp, vai ser igual a wrapcontent-->

        <TextView
            android:id="@+id/textolinhap"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="Matheus Oliveira de freitas"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textolinhap2"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Mathesu Oliveira de freitas"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textolinhap3"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Segunda visita"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/colunap2"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textolinhap4"
            android:layout_width="match_parent"
            android:layout_height="23sp"
            android:gravity="center|end"
            android:text="Ponto 2"
            android:textColor="@android:color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textolinhap5"
            android:layout_width="match_parent"
            android:layout_height="23sp"
            android:gravity="center|end"
            android:text="2017-12-12"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textolinhap6"
            android:layout_width="match_parent"
            android:layout_height="23sp"
            android:text="notificado"
            android:gravity="center_vertical|end"
            android:textSize="14sp"/>

    </LinearLayout>



</LinearLayout>